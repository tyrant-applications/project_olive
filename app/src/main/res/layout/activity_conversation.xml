<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.tyrantapp.olive.activities.ConversationActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:background="@color/olivedark">

        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="52dp" >
            
	        <Button
	            android:id="@+id/back_button"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:text="B" 
	            android:visibility="invisible"/>
	        
	    </FrameLayout>

        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TITLE" 
            android:textColor="@color/oliveblue"
            android:textSize="20sp"
            android:gravity="center" />
        
        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="52dp">
	        
	        <Button
	            android:id="@+id/call_button"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/ic_btn_header_call"/>
	        
	    </FrameLayout>

    </LinearLayout>
    <!-- 
    <org.lucasr.twowayview.widget.TwoWayView
    -->
    <com.tyrantapp.olive.component.ConversationRecyclerView
        android:id="@+id/conversations_list_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:drawSelectorOnTop="false" />
        
    <LinearLayout
        android:id="@+id/conversation_last_olive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" 
        android:gravity="center"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/conversation_last_olive_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:text="OLIVE" />
        
    </LinearLayout>
    
    <ViewFlipper
        android:id="@+id/input_method_flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ViewFlipper>
    <!-- android:id="@+id/input_method" -->
    
    <LinearLayout
        android:id="@+id/input_method_keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical" >
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="283dp" >
        
		    <android.support.v4.view.ViewPager
			    android:id="@+id/olive_keypad_pager"
			    android:layout_width="match_parent"
			    android:layout_height="240dp"
			    android:layout_marginTop="43dp" />
		    
		    <LinearLayout
			    android:id="@+id/conversation_last_olive_expander"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        android:orientation="vertical" >
		        
		        <ImageButton 
			        android:layout_width="match_parent"
			        android:layout_height="43dp"
			        android:src="@drawable/bg_btn_expand_currentplace" 
			        android:background="@color/transparent"
			        android:onClick="onExpand" />
			    
			    <ImageView 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/bg_btn_keypad_expand" />
		    
		    </LinearLayout>
		        
		</RelativeLayout>
	    
		<include layout="@layout/activity_conversation_footer"/>    
	    
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/input_method_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:visibility="gone">
			        
		<include layout="@layout/activity_conversation_text"/>    
	    
	</LinearLayout>
	
</LinearLayout>
