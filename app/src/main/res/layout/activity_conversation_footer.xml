<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/olive_keypad_extend"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:background="@color/oliveblue" >
        
    <Button
     android:id="@+id/olive_extend_text"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:background="@drawable/bg_keypad_text"/>

    <Button
     android:id="@+id/olive_extend_camera"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:background="@drawable/bg_keypad_camera"/>
        
    <Button
     android:id="@+id/olive_extend_gallery"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:background="@drawable/bg_keypad_gallery"/>
    
    <Button
     android:id="@+id/olive_extend_voice"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:background="@drawable/bg_keypad_voice"/>
    
    <Button
     android:id="@+id/olive_extend_location"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:background="@drawable/bg_keypad_locate"/>
        
</LinearLayout>