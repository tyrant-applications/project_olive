<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/olive_text_editor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/bg_conversation_textarea">
      
    <EditText
	    android:id="@+id/olive_extend_text_editor"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
        android:layout_weight="1"
	    android:hint="Up to 30 characters"
	    android:textColor="@color/black"
	    android:textColorHint="@color/graylite"
        android:singleLine="true"
        android:maxLength="30"
        android:background="@drawable/bg_conversation_edittext"/>
    
    <Button 
        android:id="@+id/olive_extend_send_button"
	    android:layout_width="38dp"
	    android:layout_height="38dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_send_button" />
        
</LinearLayout>